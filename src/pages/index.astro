<script>
  import { gsap } from 'gsap';

  // ページ読み込み完了後にアニメーションを開始
  window.addEventListener('load', () => {
    // メインコンテンツのアニメーション
    const tl = gsap.timeline({ defaults: { ease: 'power2.out' } });

    // headerのアニメーションを削除（Header.astroで定義済み）
    tl.from('#bop', {
      opacity: 0,
      y: 50,
      duration: 1,
      delay: 0.5
    })
    .from('.main-content', {
      opacity: 0,
      y: 30,
      duration: 1
    }, '-=0.5')
    .from('.paragraph', {
      opacity: 0,
      y: 20,
      duration: 0.8
    }, '-=0.3');

    // ヒーローセクション内の要素のアニメーション
    gsap.from('.video-container', {
      scale: 0.8,
      opacity: 0,
      duration: 1.2,
      delay: 1
    });
  });
</script>
